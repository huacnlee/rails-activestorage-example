<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Attachments:</strong>
  <ul>
  <% @post.attachments.each do |attach| %>
  <li><%= link_to attach.filename, upload_path(attach.blob.key, disposition: :attachment) %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
